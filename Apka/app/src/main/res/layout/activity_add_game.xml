<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGameActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:id="@+id/headerhome"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/startBlue"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/homebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homepage"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:paddingTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headerprofile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/startBlue"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="profil"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/profilebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homeprofile"
                android:layout_gravity="center"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerranking"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/startBlue"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ranking"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/rankingbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/homeleadboard" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/headerkontakt"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/startBlue"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="kontakt"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/supportbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/homesupport"
                android:layout_gravity="center"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="125dp"
            android:layout_gravity="center"
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodanie gry"
                android:textSize="35sp"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gametitle"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tytuł gry"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gamelaunchdate"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data premiery"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gamepublisher"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wydawca"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gameplatform"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Platformy"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gamegenre"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gatunek"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/gamedescription"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:hint="Opis"
                android:textAlignment="center"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="300"
                android:maxLines="4" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/addimage"
                    android:text="Dodaj zdjęcie"
                    />
                <Button
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:id="@+id/addgamebtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Dodaj grę"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/dResponse"
            android:layout_width="221dp"
            android:layout_height="37dp"
            android:text="ELDOKA"
            android:visibility="gone" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>